<?xml version="1.0"?>
<robot name="n20_sg90_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="wheel_radius" value="0.021"/>
  <xacro:property name="wheel_width" value="0.018"/>
  <xacro:property name="wheel_base" value="0.14"/>   
  <xacro:property name="track_width" value="0.12"/>  
  <xacro:property name="body_mass" value="0.8"/>     

  <material name="white"><color rgba="1 1 1 1"/></material>
  <material name="black"><color rgba="0.1 0.1 0.1 1"/></material>
  <material name="red"><color rgba="0.8 0 0 1"/></material>

  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 ${wheel_radius}" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <geometry><box size="0.18 0.1 0.04"/></geometry>
      <material name="white"/>
    </visual>
    <collision>
      <geometry><box size="0.18 0.1 0.04"/></geometry>
    </collision>
    <inertial>
      <mass value="${body_mass}"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.003" iyz="0" izz="0.003"/>
    </inertial>
  </link>

  <xacro:macro name="rear_wheel" params="suffix y_reflect">
    <link name="rear_${suffix}_wheel">
      <visual>
        <origin rpy="${pi/2} 0 0" xyz="0 0 0"/>
        <geometry><cylinder radius="${wheel_radius}" length="${wheel_width}"/></geometry>
        <material name="black"/>
      </visual>
      <inertial><mass value="0.05"/><inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/></inertial>
    </link>
    <joint name="rear_${suffix}_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="rear_${suffix}_wheel"/>
      <origin xyz="-${wheel_base/2} ${y_reflect * track_width/2} 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <xacro:macro name="front_wheel" params="suffix y_reflect">
    <link name="front_${suffix}_steer_link">
      <inertial><mass value="0.02"/><inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/></inertial>
    </link>
    <joint name="front_${suffix}_steer_joint" type="revolute">
      <parent link="base_link"/>
      <child link="front_${suffix}_steer_link"/>
      <origin xyz="${wheel_base/2} ${y_reflect * track_width/2} 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-0.52" upper="0.52" effort="1.0" velocity="2.0"/>
    </joint>
    <link name="front_${suffix}_wheel">
      <visual>
        <origin rpy="${pi/2} 0 0" xyz="0 0 0"/>
        <geometry><cylinder radius="${wheel_radius}" length="${wheel_width}"/></geometry>
        <material name="black"/>
      </visual>
    </link>
    <joint name="front_${suffix}_wheel_joint" type="continuous">
      <parent link="front_${suffix}_steer_link"/>
      <child link="front_${suffix}_wheel"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <xacro:rear_wheel suffix="left" y_reflect="1"/>
  <xacro:rear_wheel suffix="right" y_reflect="-1"/>
  <xacro:front_wheel suffix="left" y_reflect="1"/>
  <xacro:front_wheel suffix="right" y_reflect="-1"/>

  <link name="imu_link"/>
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.02"/>
  </joint>

  <link name="camera_link">
    <visual>
      <geometry><box size="0.01 0.03 0.03"/></geometry>
      <material name="red"/>
    </visual>
  </link>
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.08 0 0.05" rpy="0 0 0"/>
  </joint>
  
  <link name="camera_link_optical"/>
  <joint name="camera_optical_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_link_optical"/>
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
  </joint>

  <gazebo>
    <plugin filename="gz-sim-ackermann-steering-system" name="gz::sim::systems::AckermannSteering">
      <left_joint>front_left_wheel_joint</left_joint>
      <right_joint>front_right_wheel_joint</right_joint>
      <left_steering_joint>front_left_steer_joint</left_steering_joint>
      <right_steering_joint>front_right_steer_joint</right_steering_joint>
      <rear_left_joint>rear_left_wheel_joint</rear_left_joint>
      <rear_right_joint>rear_right_wheel_joint</rear_right_joint>
      <wheel_separation>${track_width}</wheel_separation>
      <wheel_radius>${wheel_radius}</wheel_radius>
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_footprint</child_frame_id>
    </plugin>

    <plugin filename="gz-sim-imu-system" name="gz::sim::systems::Imu"/>
    <plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
  </gazebo>

  <gazebo reference="imu_link">
    <sensor name="icm20948" type="imu">
      <always_on>1</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <topic>imu</topic>
      <gz_frame_id>imu_link</gz_frame_id>
    </sensor>
  </gazebo>

  <gazebo reference="camera_link">
    <sensor name="imx219" type="camera">
      <always_on>1</always_on>
      <update_rate>30</update_rate>
      <visualize>true</visualize>
      <topic>camera/image_raw</topic>
      <gz_frame_id>camera_link_optical</gz_frame_id>
      <camera>
        <horizontal_fov>1.085</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip><near>0.02</near><far>300</far></clip>
        
        <distortion>
          <k1>0.0</k1><k2>0.0</k2><k3>0.0</k3>
          <p1>0.0</p1><p2>0.0</p2>
          <center>0.5 0.5</center>
        </distortion>
        
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>
    </sensor>
  </gazebo>

</robot>